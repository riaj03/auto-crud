{
  "swagger": "2.0",
  "info": {
    "description": "Waris APIs",
    "version": "1.0.0",
    "title": "Waris",
    "contact": { "email": "info@groots.co.jp" }
  },
  "host": "localhost:8000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/api/users": {
      "post": {
        "responses": {},
        "parameters": [{ "in": "body", "name": "body", "schema": { "$ref": "#/definitions/User" } }]
      },
      "get": { "responses": {} }
    },
    "/api/users/{id}": {
      "put": {
        "responses": {},
        "parameters": [
          { "in": "path", "name": "params" },
          { "in": "body", "name": "body", "schema": { "$ref": "#/definitions/User" } }
        ]
      },
      "patch": {
        "responses": {},
        "parameters": [
          { "in": "path", "name": "params" },
          { "in": "body", "name": "body", "schema": { "$ref": "#/definitions/User" } }
        ]
      },
      "get": { "responses": {}, "parameters": [{ "in": "path", "name": "params" }] },
      "delete": { "responses": {}, "parameters": [{ "in": "path", "name": "params" }] }
    },
    "/api/profiles": {
      "post": {
        "responses": {},
        "parameters": [{ "in": "body", "name": "body", "schema": { "$ref": "#/definitions/Profile" } }]
      },
      "get": { "responses": {} }
    },
    "/api/profiles/{id}": {
      "put": {
        "responses": {},
        "parameters": [
          { "in": "path", "name": "params" },
          { "in": "body", "name": "body", "schema": { "$ref": "#/definitions/Profile" } }
        ]
      },
      "patch": {
        "responses": {},
        "parameters": [
          { "in": "path", "name": "params" },
          { "in": "body", "name": "body", "schema": { "$ref": "#/definitions/Profile" } }
        ]
      },
      "get": { "responses": {}, "parameters": [{ "in": "path", "name": "params" }] },
      "delete": { "responses": {}, "parameters": [{ "in": "path", "name": "params" }] }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "registrationType": { "type": "string" },
        "isAgreedTerms": { "type": "string" },
        "isAgreedPDSTerms": { "type": "boolean" }
      }
    },
    "Profile": {
      "type": "object",
      "properties": {
        "familyName": { "type": "string" },
        "name": { "type": "string" },
        "surname": { "type": "string" },
        "middleName": { "type": "boolean" },
        "userId": { "type": "integer" }
      }
    }
  }
}
